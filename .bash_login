[ -n "${DEBUG}" ] && echo "... starting .bash_login";

[ -r ${HOME}/.bashrc ] && . ${HOME}/.bashrc;

# use sane control characters
/bin/stty sane
/bin/stty erase 

# ssh key management
if [ -r ${HOME}/.ssh/id_rsa ]; then
    if [ `${TYPE_CMD} keychain` ]; then
        # `${TYPE_CMD} keychain` --agents ssh --inherit any --quiet id_rsa;
        `${TYPE_CMD} keychain` --agents gpg --inherit any --quiet $KEYID;
    fi
fi

if [ -d ${HOME}/.home ]
then
    make -s;
fi

[ -n "${DEBUG}" ] && echo "... ending .bash_login";
