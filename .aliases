[ -n "${DEBUG}" ] && echo '... starting .aliases';

alias -- \
    +r='chmod +r' \
    +w='chmod +w' \
    +x='chmod +x' \
    -='cd -' \
    ..='cd ..' \
    @='setxtermsize' \
    cap='cap -s user=yon' \
    bye='exit' \
    du='du -k | sort -n' \
    e='enscript -2rG -P' \
    g='git' \
    l='ls -CF' \
    la='ls -aCF' \
    ll='ls -lF' \
    lla='ls -alF' \
    llar='ls -alrF' \
    llr='ls -lrF' \
    lr='ls -rCF' \
    m='mutt' \
    mg='mutt -F ~/.mutt/gilt' \
    p='lpr -P' \
    q='lpq -P' \
    pull_all='git checkout dev; git pull; git checkout qa; git pull; git checkout prod; git pull; git checkout dev' \
    re='rm -rf *~' \
    rs='resize' \
    rt="echo -ne \'\\033c\'" \
    s='ssh -x' \
    scp='scp -p' \
    sx='ssh -AX' \
    t="cat /dev/null > log/development.log && for i in log/thin*.log; do cat /dev/null > \$i; done && thin --config config/environments/${RAILS_ENV}/thin.yml" \
    vi="${EDITOR}" \
    xe='xemacs' \
# leave this line to swallow the \ at the end of the previous line

case "${SYSTEM}" in
Darwin*)
    alias -- \
        ps='ps -avwwx' \
        top='top -orsize -Ocpu' \
# leave this line to swallow the \ at the end of the previous line
    ;;
Linux*)
    alias -- \
        df='df -kl' \
        ps='ps -ef' \
        top='top -d 1' \
# leave this line to swallow the \ at the end of the previous line
    ;;
SunOS*)
    alias -- \
        df='df -kl' \
        ps='ps -aux' \
        top='top -s 1' \
# leave this line to swallow the \ at the end of the previous line
    ;;
esac

[ -n "${DEBUG}" ] && echo '... ending .aliases';

# vim:ft=sh:
