[ -n "${DEBUG}" ] && echo "... starting .paths";

MANPATH="${HOME}/man";
PATH="${HOME}/bin";

if [ -d ~/Code/gilt/mobile/mobile-service-tools/bin ]; then
    PATH="${PATH}:~/Code/gilt/mobile/mobile-service-tools/bin";
fi

if [ -d /web/tools/bin ]; then
    PATH="${PATH}:/web/tools/bin";
fi

if [ -d /usr/libexec ]; then
    PATH="${PATH}:/usr/libexec";
fi

case "${SYSTEM}" in
Darwin*)
    PATH="${PATH}:/usr/libexec";
    PATH="${PATH}:/System/Library/CoreServices";
    ;;
Linux*)
    ;;
esac

MANPATH="${MANPATH}:/usr/local/man:/usr/local/share/man";
MANPATH="${MANPATH}:/usr/man:/usr/share/man";
PATH="${PATH}:/usr/local/bin:/usr/local/sbin";
PATH="${PATH}:/usr/bin:/usr/sbin";
PATH="${PATH}:/bin:/sbin";

export MANPATH;
export PATH;

[ -n "${DEBUG}" ] && echo "... ending .paths";
