[user]
	email = yfeldman@gilt.com
	name = Yonatan Feldman
[alias]
	a = add
	cam = commit -a -m
	ci = commit -v
	cim = commit -m
	co = checkout
	cp = cherry-pick -x
	d = diff --full-index --ignore-all-space
	l = log -c --no-merges
	lp = log -c -p --full-index --ignore-all-space --no-merges
	ls = log -c --no-merges --stat
	me = merge
	pl = pull
	ps = push
	s = status
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	frag = magenta bold
	meta = yellow bold
	new = green bold
	old = red bold
	whitespace = blue bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
